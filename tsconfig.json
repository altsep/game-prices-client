{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": ["node", "svelte"],
    "typeRoots": ["node_modules/@types"],
    "downlevelIteration": true,
    "importHelpers": true,
    "noEmit": true,
    "allowJs": true
  },
  "include": ["src/*", "src/old"],
  "exclude": ["public/*", "node_modules/*", "dist/*"]
}
